{
  "name": "mtgcat",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@react-pdf/renderer": "^2.0.12",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "electron-is-dev": "^2.0.0",
    "pouchdb": "^7.2.2",
    "pouchdb-find": "^7.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-to-print": "^2.12.4",
    "redux": "^4.1.0",
    "redux-observable": "^1.2.0",
    "sqlite3": "^5.0.2",
    "web-vitals": "^1.0.1"
  },
  "dist-all": "electron-builder -mw",
  "author": "Maisie Klaassen",
  "description": "Magic the Gathering Card Administrative Tool",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start-react": "react-scripts start",
    "build-react": "react-scripts build",
    "start-electron": "nodemon --watch .public/* --exec \"electron .\"",
    "dev": "concurrently \"yarn start-react\" \"wait-on http://localhost:3000 && yarn start-electron\" ",
    "postinstall": "electron-builder install-app-deps",
    "pack-app": "yarn build-react && electron-builder --dir",
    "pack-build": "electron-builder --dir",
    "build": "yarn build-react && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.0.2",
    "electron": "^12.0.4",
    "electron-builder": "^22.10.5",
    "nodemon": "^2.0.7",
    "wait-on": "^5.3.0"
  },
  "build": {
    "appId": "nl.maisieklaassen.mtgcat",
    "productName": "MtGCat",
    "copyright": "Maisie Klaassen",
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "./public/db/",
        "to": "db/",
        "filter": [
          "**/**/*"
        ]
      }
    ],
    "win": {
      "icon": "./build/favicon/appicon.ico",
      "target": [
        "portable",
        "msi"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ]
    }
  }
}
